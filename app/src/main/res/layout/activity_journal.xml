<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context="com.example.footcare.diabeticcarethermal.Journal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:layout_weight="1"
                android:text="How are you feeling?"
                android:textSize="20sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/excellent"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/excellentinactive" />

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/good"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/goodinactive" />

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/fair"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/fairinactive" />

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/poor"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/poorinactive" />

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/terrible"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/terribleinactive" />

            <Space
                android:layout_width="10sp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:layout_weight="1"
                android:text="What are you up to?"
                android:textSize="20sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:ems="10"
                android:inputType="text"
                android:scrollHorizontally="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|bottom"
            android:orientation="vertical"
            tools:gravity="top|bottom">

            <!--<Button-->
                <!--android:id="@+id/showall"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Show All" />-->

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Post Entry" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/entries"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>