                    android:minWidth="80dp"
                    android:text="Mar"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Apr"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="May"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Jun"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Jul"
                    android:visibility="gone" />

            <Button
                android:id="@+id/month7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:minWidth="80dp"
                android:text="Aug"
                android:visibility="gone" />

                <Button
                    android:id="@+id/month8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Sep"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Oct"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Nov"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/month11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:minWidth="80dp"
                    android:text="Dec"
                    android:visibility="gone" />


        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="%"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Wound Percentage"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

