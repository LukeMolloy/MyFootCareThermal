<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.footcare.diabeticcarethermal.TakeFootImage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#595959"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="1. Draw a circle around your foot"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.footcare.diabeticcarethermal.TouchImageView
            android:id="@+id/imgDisplay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:layout_weight="0.02"
            android:gravity="center|bottom"
            android:weightSum="10">

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_rounded_redesign_2"
                android:text="Redo Analysis"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/processimage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_rounded_redesign"
                android:text="Process Image"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_rounded_redesign"
                android:text="Save Image"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_rounded_redesign"
                android:text="Next"
                android:textColor="@color/white"
                android:visibility="gone" />
        </TableRow>

    </LinearLayout>


</RelativeLayout>